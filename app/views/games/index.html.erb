
<div id="header">
  <a href="<%= user_path(@user) %>">User</a>
</div>

<div id="content">
  <h1>Hangman</h1>

  <%= render partial: 'new_game' %>

  <table>

    <tr>
      <td>ID</td>
      <td>Word</td>
      <td>Status</td>
    </tr>

    <% @user.games.all.each do |game| %>
      <tr style="background-color: <%= game_color(game) %>">
        <td><a href="<%= user_game_url(@user, game) %>"><%= game.id %></a></td>
        <td>
          <% if !game.in_progress? %>
          <a href="<%= dictionary_url(game.target_word) %>" target="_blank">
          <% end %>
          <%= status_string(game) %>
          <% if !game.in_progress? %>
          </a>
          <% end %>
        </td>
        <td><%= progress_message(game) %></td>
      </tr>
    <% end %>
  </table>

  <h4>Dylan McKay</h4>
</div>
